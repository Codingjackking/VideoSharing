{{#if isLoggedIn}}
<div class="avatar-dropdown">
  <div class="avatar-circle">{{helper user.username}}</div>
  <div class="dropdown-menu">
    <button class="button-dropdown nav-items">Hi {{user.username}}</button>
    <a class="dropdown-menu-items" href="/users/profile/{{user.userId}}">Profile</a>
    <form action="/users/logout" method="post">
      <button class="nav-items" type="submit">Log out</button>
    </form>
  </div>
</div>
  {{else}}
    <div class="nav-items">
      <a href="/login" class="login-button">Sign In</a>     
      </div>
  {{/if}}
