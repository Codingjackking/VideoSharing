<main>
  <h2>Login</h2>
  <form id="login-form" class="input-form",
  action="/users/login" 
  method="POST"enctype="application/x-www-form-urlencoded">
    <div class="input-group">
		  <label for="credential">Username:</label>
      <input class="input-text" type="username" name="username" required
      placeholder="Username">
    </div>
    <div class="input-group">
      <label for="password">Password:</label>
      <input class="input-text" type="password" name="password" class="password" required
      placeholder="Password">
    </div>
    <input type="submit" value="Login">
    <details class="detail">
      <summary>
        Need Help?
      </summary>
      <a href="#">Forgot your password?</a>
    </details>
  </form>
</main>    
<div class="login-register">
  <h3>New to MeTube?</h3>
  <form action="register">
    <input type="submit" value="Create your MeTube Account" class="register">
  </form>
</div>