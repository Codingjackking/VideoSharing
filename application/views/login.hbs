<main>
  <h2>Login</h2>
  <form>
    <div class="input-group">
		  <label for="credential">Username or Email:</label>
      <input class="input-text" id="credential" type="credential" name="credential" required
      placeholder="Username or Email">
    </div>
    <div class="input-group">
      <label for="password">Password:</label>
      <input class="input-text" type="password" name="password" class="password" required
      placeholder="Password">
    </div>
    <input type="submit" value="Login">
    <details class="detail">
      <summary>
        Need Help?
      </summary>
      <a href="#">Forgot your password?</a>
    </details>
  </form>
</main>    
<div class="login-register">
  <h3>New to MeTube?</h3>
  <form action="registration">
    <input type="submit" value="Create your MeTube Account" class="register">
  </form>
</div>