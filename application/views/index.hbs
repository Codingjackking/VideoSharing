<main>
  <h1>Home Page</h1>
  <h2>Recent Videos</h2>
  <div class="index-container">
    {{#each posts}}
    <div class="post-container">
      <div class="video-wrapper"  onclick="redirectToPost('{{postId}}')">
          <img class="thumbnail-overlay" src="/{{thumbnail}}">
          <video controls loop>
            <source src="/{{video}}" type="video/mp4">
          </video>
          </img>
      </div>
      <div class="post-info">
        <p class="desc">{{description}}</p>
        <p class="title">{{title}}</p>
        <p class="username">{{username}}</p>
        <p class="date">{{formatDateString createdAt}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</main>

<script>
function redirectToPost(postId) {
  // Replace the URL with the appropriate path to redirect to the specific post
  window.location.href = `/posts/${postId}`;
}
</script>