<main>
  <h1>Home Page</h1>
  <h2>Recent Videos</h2>
  <div class="index-container">
    {{#each posts}}
    {{log this}}
      <div class="post-container">
        <div class="video-wrapper">
          <video controls loop>
            <source src="/{{video}}" type="video/mp4">
          </video>
          <img class="thumbnail-overlay" src="/{{thumbnail}}">
        </div>
        <div class="post-info">
          <p class="desc">{{description}}</p>
          <p class="title">{{title}}</p>
          {{!--<a class="username" href="/users/profile/{{userId}}"> --}}
            <p>{{username}}</p>
          {{!--</a>--}}
        </div>
      </div>
    {{/each}}
  </div>
</main>
