<main>
  <h1>Home Page</h1>
  <h2>Recent Videos</h2>
  <div class="index-container">
    
    {{#each posts}}
    {{log this}}
      <div class="post-container">
        <a href="/posts/{{postId}}">
          <div class="video-wrapper">
            <img class="thumbnail-overlay" src="/{{thumbnail}}">
            <video controls loop>
              <source src="/{{video}}" type="video/mp4">
            </video>
            </img>
          </div>
        </a>
        <div class="post-info">
          <p class="desc">{{description}}</p>
          <p class="title">{{title}}</p>
          <p class="username">{{username}}</p>
          <p class="date">{{formatDateString createdAt}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</main>
